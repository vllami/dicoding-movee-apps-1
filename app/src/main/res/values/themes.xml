<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SubmissionSatu" parent="Theme.AppCompat.DayNight.DarkActionBar" />

    <style name="Theme.SubmissionSatu.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="m">@color/colorDarkGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SubmissionSatu.TabLayout">
        <item name="android:fontFamily">@font/muli_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.SubmissionSatu.TransparentStatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

</resources>